---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon, StickyHeader } from "astro-navbar";
import { Image } from "astro:assets";

const menuitems = [
  {
    title: "Our team",
    path: "#team",
  },
  {
    title: "Our Services",
    path: "#services",
  },
  {
    title: "Blog",
    path: "https://blog.dunegroup.xyz",
  },
];
---
<StickyHeader
  class="sticky top-0 z-50"
  scrollY={20}
  defaultClass="bg-white"
  activeClass="bg-white"
>
<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/">
          <Image
            src="/hero.png"
            width="50"
            height="50"
            decoding="async"
            loading="lazy"
            alt="A description of my image."
          />
        </a>&nbsp;
        <a href="/" class="text-lg"
          ><span class="font-bold text-black">Dune
            Group</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                  <li>
                  
                    <Link
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-black"
                      style="inverted">
                      <span> {item.title}</span>
                      </Link>
                    
                  </li>
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#contact" size="md" style="inverted">Contact us</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="#contact" size="md" style="inverted">Contact us</Link>
      </div>
    </div>
  </header>
</Container>
</StickyHeader>